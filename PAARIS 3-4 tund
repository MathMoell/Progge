#Harj (2)
def vanus():
    vanused = [9, 12, 15, 21, 45, 69, 72]

    suurim = max(vanused)
    v2ikseim = min(vanused)
    kokku = sum(vanused)
    keskmine = kokku / len(vanused)

    print("Suurim vanus on", suurim)
    print("V2ikseim vanus on", v2ikseim)
    print("Kokku on", kokku)
    print("Keskmine vanus on", keskmine)
vanus()
